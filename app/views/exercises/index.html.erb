<div class="exercise_listing_nav clearfix">
  <div class="header_exercise">
    <h2>exercises</h2>
  </div>
    <div class="filtering">
      <%= link_to 'all', exercises_path %>|
      <%= link_to 'Filter Upper Body', :filter => 'Upper Body' %>|
      <%= link_to 'Filter Lower Body', :filter => 'Lower Body' %>|
      <%= link_to 'Filter Core', :filter => 'Core' %>|
      <%= link_to 'Filter Cardio', :filter => 'Cardio' %>|
    </div>
</div>
<div class="container-fluid clearfix exercises">
    <div class="row clearfix">
    <% @exercises.each do |exercise| %>
      <div class="clearfix col-lg-3 col-md-3 col-sm-4 col-xs-12">
        <p><%= image_tag exercise.image, :width => "200px",:height => "150px" %></p>
        <h3><%= exercise.name %> </h3>
        <p><%= exercise.description.truncate(100) %></p>
        <p><%= link_to 'Show', exercise, :class => "btn btn-primary btn-sm btn-block" %></p>
      </div>
    <% end %>
  </div>
</div>


<br>



