<h2>my workouts</h2>
  <div class="container">
    <div class="row">
      <% @workouts.each do |workout| %>
        <div class="workout_home clearfix">
          <div class="workout_names">
            <h3><%= workout.day %></h3>
            <h4><%= workout.name %></h4>
          </div>
          <div class="exercise_info_workout clearfix">
            <% workout.exercises.each do |exercise| %>
              <p><%= exercise.name%></p>
            <% end %>
            <div class="clearfix"></div>
          </div>
        
          <div class="buttons_bottom">
            <p><%= link_to 'View Workout', workout, :class => "btn btn-default btn-sm btn-block" %>
            <%= link_to 'Edit Workout', edit_workout_path(workout), :class => "btn btn-default btn-sm btn-block" %></p>
          </div>
        </div>
      <% end %>
    </div>    
  </div>
<br>

